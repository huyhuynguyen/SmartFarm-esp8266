<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnSettime_light"
        android:layout_width="139dp"
        android:layout_height="49dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="6dp"
        android:text="Setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnSettime_pump"
        app:layout_constraintTop_toBottomOf="@+id/light_time_end" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="End at:"
        app:layout_constraintEnd_toStartOf="@+id/light_time_end"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="Start at:"
        app:layout_constraintEnd_toStartOf="@+id/light_time_start"
        app:layout_constraintStart_toStartOf="@+id/btnLight"
        app:layout_constraintTop_toBottomOf="@+id/btnLight" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="273dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:text="Temperature and Humidity"
        android:textColor="#A82828"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="186dp"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Soil moisture"
        android:textColor="#A82828"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="180dp"
        android:layout_height="158dp"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <ProgressBar
            android:id="@+id/progressBarSoilMoisture"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/circle_shape"
            android:indeterminate="false"
            android:progress="50"
            android:progressDrawable="@drawable/moisture_progressbar" />

        <TextView
            android:id="@+id/moisture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="95dp"
            android:layout_marginLeft="95dp"
            android:gravity="center"
            android:text="50%"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgMoisture"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="55dp"
            android:layout_marginLeft="55dp"
            app:srcCompat="@drawable/icons8_wet_48" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout3"
        android:layout_width="182dp"
        android:layout_height="162dp"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        app:layout_constraintEnd_toStartOf="@+id/frameLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <ProgressBar
            android:id="@+id/progressBarTemperature"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/circle_shape"
            android:indeterminate="false"
            android:max="50"
            android:progress="22"
            android:progressDrawable="@drawable/temperature_progressbar" />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="80dp"
            android:text="22&#xb0;C"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="38dp"
            android:layout_height="33dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            app:srcCompat="@drawable/icons8_temperature_48" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperature" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="182dp"
        android:layout_height="162dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <ProgressBar
            android:id="@+id/progressBarHumidity"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/circle_shape"
            android:indeterminate="false"
            android:progress="50"
            android:progressDrawable="@drawable/humidity_progressbar" />

        <TextView
            android:id="@+id/humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp"
            android:text="25%"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="37dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            app:srcCompat="@drawable/icons8_water_48" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity" />
    </FrameLayout>

    <Button
        android:id="@+id/btnPump"
        android:layout_width="134dp"
        android:layout_height="59dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:text="PUMP OFF"
        android:textColor="#100F0F"
        app:backgroundTint="#CFD3D2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnData" />

    <Button
        android:id="@+id/btnLight"
        android:layout_width="134dp"
        android:layout_height="59dp"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:text="LIGHT OFF"
        android:textColor="#000000"
        app:backgroundTint="#CFD3D2"
        app:layout_constraintStart_toEndOf="@+id/btnPump"
        app:layout_constraintTop_toBottomOf="@+id/btnData" />

    <Button
        android:id="@+id/btnData"
        android:layout_width="174dp"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:text="data (week)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout3" />

    <Button
        android:id="@+id/btnSettime_pump"
        android:layout_width="139dp"
        android:layout_height="49dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="6dp"
        android:text="Setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pump_time_end" />

    <TextView
        android:id="@+id/pump_time_start"
        android:layout_width="78dp"
        android:layout_height="25dp"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="21:06:00"
        app:layout_constraintEnd_toEndOf="@+id/btnPump"
        app:layout_constraintTop_toBottomOf="@+id/btnPump" />

    <TextView
        android:id="@+id/pump_time_end"
        android:layout_width="78dp"
        android:layout_height="26dp"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="06:10:00"
        app:layout_constraintEnd_toEndOf="@+id/pump_time_start"
        app:layout_constraintStart_toStartOf="@+id/pump_time_start"
        app:layout_constraintTop_toBottomOf="@+id/pump_time_start" />

    <TextView
        android:id="@+id/light_time_start"
        android:layout_width="78dp"
        android:layout_height="25dp"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="17:44:00"
        app:layout_constraintEnd_toEndOf="@+id/btnLight"
        app:layout_constraintTop_toBottomOf="@+id/btnLight" />

    <TextView
        android:id="@+id/light_time_end"
        android:layout_width="78dp"
        android:layout_height="25dp"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="07:00:00"
        app:layout_constraintEnd_toEndOf="@+id/light_time_start"
        app:layout_constraintStart_toStartOf="@+id/light_time_start"
        app:layout_constraintTop_toBottomOf="@+id/light_time_start" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="Start at:"
        app:layout_constraintEnd_toStartOf="@+id/pump_time_start"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnPump"
        app:layout_constraintTop_toBottomOf="@+id/btnPump" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="End at:"
        app:layout_constraintEnd_toStartOf="@+id/pump_time_end"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/tvDevicesState"
        android:layout_width="98dp"
        android:layout_height="22dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="2dp"
        android:gravity="center"
        android:text="Disconnected"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>